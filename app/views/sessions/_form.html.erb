 <%= form_for :session, url: entrar_path, method: :post do |form| %>
  
    <div class="form-signin col-6 col-md-4 offset-md-4">
        <form>
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <%= form.label :email %>
                <%= form.email_field :email, placeholder: 'Email', class: 'form-control'  %>
            </div>
            <div class="form-floating">
                <%= form.label :password %>
                <%= form.password_field :password, placeholder: 'Senha', class: 'form-control' %>
            </div>

            <%= form.submit 'Entrar', class: 'w-100 btn btn-lg btn-primary' %>
            <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
        </form>
    </div>

<% end %>